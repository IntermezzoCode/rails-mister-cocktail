<div class="list-container">

  <div class="row">
    <h1>Cocktail List</h1>
    <% @cocktails.each do |cocktail|%>
    <div class="grid col-xs-12 col-sm-4">
      <div class="card">
        <div class="thumb"> <%= cl_image_tag cocktail.photo, height: 50, width: 50, crop: :thumb, gravity: :face %></div>
        <div class="card-name"> <%= link_to cocktail.name, cocktail_path(cocktail)%> </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
